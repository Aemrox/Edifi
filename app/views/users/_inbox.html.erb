
<section>
    <!-- Nav tabs -->
    <div class="container-fluid">
        <!-- Nav tabs -->
        <ul class="nav nav-tabs">
          <li class="active"><a href="#profile" data-toggle="tab">Profile</a></li>
          <li><a href="#skills" data-toggle="tab">Skills</a></li>
          <li><a href="#connections" data-toggle="tab">Connections <span class="badge"><%=current_user.connection_requested?.length%></span></a></li>
          <li><a href="#lessons" data-toggle="tab">Lessons <span class="badge"><%=current_user.pending_appointment_requests.length%></span></a></li>
          <li><a href="#message_tab" data-toggle="tab">Messages <span class="badge"><%=current_user.unread_message_num %></span></a></li>
        </ul>
    </div>

  <div class="row tab-content">
      <div class="tab-pane fade in active col-lg-12" id="profile">
        <div id = "user_show">
          <%= render "show" %>
        </div>
      </div>
      <div class="tab-pane fade col-lg-12" id="skills">
        <%= render "skills_tab" %>
      </div>
      <div class="tab-pane fade col-lg-12" id="connections">
        <%= render "my_connections" %>
      </div>
      <div class="tab-pane fade col-lg-12" id="lessons">
        <%= render "lessons/lesson_tab" %>
      </div>
      <div class="tab-pane fade col-lg-12" id="message_tab">
        <%= render "conversations" %>
      </div>

  </div>

</section>

 <!--Tabs-->
