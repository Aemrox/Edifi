<% if current_user.teacher? %>
  <h1>Add new skills!</h1>
  <div id = "user_skills">
    <%= render partial: "users/skills/teacher_skills", locals: {teacher: current_user} %>
  </div>
<% else %>
  <h1>Sign up as a teacher!</h1>
<% end %>

<h2>What skills can you teach?</h2>
<div id="skills_selector">
  <%= render partial: "users/skills/skill_selector", locals: {user: current_user}%>
</div>
<h2 class="new_skill_form">Don't see your skill? add one!</h2>
  <%= render partial: "skills/form", locals: {return_to: @_request.original_url}%>
