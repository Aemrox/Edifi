<% if !Conversation.between(current_user.id, recipient.id).present? %>
  <%= link_to "Message", conversations_path(:controller => "conversations", :action => "create", :conversations => {:sender_id => current_user.id, :recipient_id => recipient.id}), :method=> :post, class: "btn btn-primary btn-xs" %>
<% else %>
  <% conversation = Conversation.between(current_user.id, recipient.id).first %>
  <%= link_to "Message", conversation_path(conversation), class: "btn btn-primary btn-xs" %>

<% end %>