<h1>All Subjects</h1>


<% @subjects.each do |subject| %>

 <div>
  <h2><%= subject.name %></h2>
  <p><%= subject.description %></p>
  <% if subject.skills.length > 0 %>
      <%= render "skills/skill_by_subject", locals: {skills: subject.skills} %>
  <% else %>
    <p>Nobody's added a skill yet!</p>
  <% end %>
 </div>


<% end %>
