<div class="container">
  <div class="row">
    <div class="col-lg-4 col-md-4 col-sm-4">
      <h2 class="text-center cs-heading"><%= @subject.name %></h2>
      <%= image_tag("subtb.jpg", :class => "img-circle img-center") %>
    </div>
    <div class="col-lg-8 col-md-8 col-sm-8">
      <% if @subject.skills.length > 0 %>
        <%= render "skills/skill_by_subject", locals: {skills: @subject.skills} %>
      <% else %>
        <h2 class="cs-heading top-space less-space">Nobody's added a skill yet!</h2>
      <% end %>
    </div>
  </div>
</div>