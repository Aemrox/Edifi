<div class="row">
  <div class="col-lg-9 col-md-9">
    <%= form_for @comment, :role => "form" do |f| %>
        <div class="form-group">
          <%= f.label :review %>
          <%= f.text_field :content, :class => "form-control" %>
        </div>
         <%= f.submit :class => "btn btn-primary" %>
    <% end %>
  </div>
</div>