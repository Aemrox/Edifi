<h1> Create a new skill!</h1>
<div class="skill_form">
  <%= form_for @skill do |f|%>
    <div class="skill_name">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class="skill_description">
      <%= f.label :description %>
      <%= f.text_field :description %>
    </div>
    <div class="skill_subject">
      <%= f.collection_radio_buttons(:subject_id, Subject.all, :id, :name)%>
    </div>
    <%= hidden_field_tag(:original_page, return_to) %>

    <%= f.submit %>

  <% end %>
</div>
