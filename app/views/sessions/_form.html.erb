<%= form_tag login_path, :id => "form-validation", :role => "form" do %>
<div class="form-group">
  <%= label_tag :user_name %>
  <%= text_field_tag :user_name, "", placeholder: 'User Name', :class => "form-control", :id => "name3" %>
</div>

<div class="form-group">
  <%= label_tag :password %>
  <%= password_field_tag :password, "", placeholder: 'Password', :class => "form-control", :id => "email3" %>
</div>

<%= submit_tag "Log In", :class => "btn btn-primary" %>

<% end %>